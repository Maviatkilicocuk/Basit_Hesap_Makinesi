package Giris;
import java.util.Scanner;
public class Hesap_Makinesi {
    public static void main(String[] args) {
        double x1, x2;
        int secim;

        Scanner input = new Scanner(System.in);
        System.out.print("İlk sayınızı giriniz : ");
        x1 = input.nextDouble();

        System.out.print("İkinci sayınızı giriniz : ");
        x2 = input.nextDouble();

        System.out.println(" 1. Toplama \n 2. Çıkarma \n 3. Çarpma \n 4. Bölme");
        System.out.print("Yapmak istediğiniz işlemi seçiniz : ");


        secim = input.nextInt();


        switch (secim) {
            case 1:
                System.out.println("Değerlerin Toplamı =" + (x1 + x2));
                break  ;
            case 2:
                System.out.println("Değerlerin Çıkarılması =" + (x1 - x2));
                break;
            case 3:
                System.out.println("Değerlerin Çarpımı =" + (x1 * x2));
                break;
            case 4:
                if (x2 ==0 ) {
                    System.out.println("Bir sayı sıfıra bölünemez");
                }
                else {
                    System.out.println("Değerlerin Bölümü =" + (x1 / x2));
                }
                break;

            default:
                System.out.println("Yanlış giriş yaptınız.");



        }
        System.out.print("İyi günler dileriz");
    }
}
